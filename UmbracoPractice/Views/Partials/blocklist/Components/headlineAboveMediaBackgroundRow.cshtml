@inherits UmbracoViewPage<BlockListItem>

@{
    var row = (HeadlineAboveMediaBackgroundRow)Model.Content;
    if (row == null)
    {
        return;
    }
}

<div class="overflow-hidden">
    <div class="bg-media">
        <div class="overlay d-flex justify-content-center align-items-center">
            <div class="media-content text-center text-white">
                @if (!string.IsNullOrWhiteSpace(row.Title))
                {
                    <h1 class="display-4"><b>@row.Title</b></h1>
                }
                else
                {
                    <h1></h1>
                }
                @if (!string.IsNullOrWhiteSpace(row.Description))
                {
                    <p class="lead">@row.Description</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .bg-media {
        position: relative;
        top: 0;
        left: 0;
        width: 100vw;
        height: 95vh;
        background-size: cover;
        background-position: center;
    }
</style>

@if (row.ImageOrVideoBackground != null)
{
    <style>
        .bg-media {
            background-image: url(@row.ImageOrVideoBackground.Url());
        }
    </style>
}
else
{
    <style>
        .bg-media {
            background-color: #fff;
        }
    </style>
}